---
interface Props {
	icon: string;
	title: string;
	description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class={`p-5 md:px-5 md:py-10 rounded-xl flex flex-col justify-center align-middle items-start gap-5 bg-blue border-1 border-border-black`}
>
<div class="flex gap-4 justify-center items-center align-middle">
  <div class="w-14 h-14 py-2 px-2 bg-yellow rounded-xl flex justify-center">
    <img src={icon} alt="" />
  </div>
  <h3>{title}</h3>
</div>

<p class="block text-text-primary text-body1">
  {description}
</p>
</div>
