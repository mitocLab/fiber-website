---
interface Props {
	iconSrc: string;
	title: string;
	description: string;
}

const { iconSrc, title, description } = Astro.props;
---

<div
  class={`h-[303px] rounded-xl flex flex-col justify-start align-middle items-start bg-yellow border-1 border-border-black cursor-pointer group overflow-hidden relative`}
>
  <div
    class="absolute top-5 left-5 w-fit h-fit transition-transform duration-300 group-hover:-translate-y-[80%] flex flex-col justify-start"
  >
    <img
      src={iconSrc}
      alt=""
      class="h-1/2 w-fit text-left mb-[20px] md:mb-[40px]"
    />
    <h3>{title}</h3>
  </div>
  <div
    class="absolute top-full left-0 w-fit text-body2 transition-transform duration-300 group-hover:-translate-y-[200px]"
  >
    <p class="p-5">{description}</p>
  </div>
</div>
